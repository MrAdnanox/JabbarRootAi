// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
// .vscode/launch.json
{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Lancer l'Extension JabbarRoot",
		"type": "extensionHost",
		"request": "launch",
		"args": [
		  // Le chemin vers le dossier de l'extension à lancer.
		  // C'est notre sous-dossier, pas la racine.
		  "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-extension"
		],
		"outFiles": [
		  // Où trouver les fichiers Javascript compilés pour les source maps.
		  "${workspaceFolder}/packages/vscode-extension/dist/**/*.js"
		],
		"preLaunchTask": "pnpm: build" // Exécuter notre script de build racine avant chaque lancement
	  }
	]
}