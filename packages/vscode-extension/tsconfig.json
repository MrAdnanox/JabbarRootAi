{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    // Nous n'utilisons une base commune
    "baseUrl": ".", // Important pour que les 'paths' fonctionnent
    "paths": {
      // Dit à TypeScript que "@jabbarroot/core" se trouve en fait dans le dossier src du package core
      "@jabbarroot/core": ["../core/src"],
      "@jabbarroot/core/*": ["../core/src/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  // La référence de projet est essentielle
  "references": [
    { "path": "../core" }
  ]
}