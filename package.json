{
  "name": "jabbarroot",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "vscode": "^1.80.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MrAdnanox/JabbarRootAi.git"
  },
  "scripts": {
    "build:packages": "pnpm --filter \"@jabbarroot/core\" --filter \"@jabbarroot/types\" --filter \"@jabbarroot/prompt-factory\" --filter \"@jabbarroot/vector-engine\" build",
    "build:extension": "pnpm --filter \"@jabbarroot/vscode-extension\" build",
    "build": "pnpm build:packages && pnpm build:extension",
    "watch:ext": "pnpm --filter \"@jabbarroot/vscode-extension\" watch",
    "lint": "eslint packages/**/src/**/*.ts",
    "test": "pnpm --filter \"@jabbarroot/vscode-extension\" test"
  },
  "devDependencies": {
    "@types/brace-expansion": "^1.1.2",
    "@types/node": "^20.19.1",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "mkdirp": "^3.0.1",
    "prettier": "^3.6.1",
    "tap": "^21.1.0",
    "tshy": "^3.0.2",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3"
  }
}