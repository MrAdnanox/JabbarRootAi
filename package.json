{
  "name": "jabbarroot",
  "displayName": "JabbarRoot",
  "description": "JabbarRoot, the context protector",
  "version": "0.0.1",
  "publisher": "jabbarroot",
  "repository": {
    "type": "git",
    "url": "https://github.com/mradnanox/JabbarRoot.git"
  },
  "author": {
    "name": "JabbarRoot",
    "email": "jabbarroot@jabbarroot.com"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jabbaRoot.createContext",
        "title": "JabbarRoot: Créer un Contexte Programmable",
        "icon": "$(add)"
      },
      {
        "command": "jabbaRoot.deleteContext",
        "title": "JabbarRoot: Supprimer le Contexte",
        "icon": "$(trash)"
      },
      {
        "command": "jabbaRoot.refreshContextView",
        "title": "JabbarRoot: Rafraîchir les Contextes",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jabba-explorer",
          "title": "JabbarRoot",
          "icon": "resources/JabbarRoot-icon.png"
        }
      ]
    },
    "views": {
      "jabba-explorer": [
        {
          "id": "jabbaRoot.contextView",
          "name": "Contextes Programmables",
          "icon": "resources/JabbarRoot-icon.png",
          "contextualTitle": "JabbarRoot"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "jabbaRoot.createContext",
          "when": "view == jabbaRoot.contextView",
          "group": "navigation"
        },
        {
          "command": "jabbaRoot.refreshContextView",
          "when": "view == jabbaRoot.contextView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "jabbaRoot.deleteContext",
          "when": "view == jabbaRoot.contextView && viewItem == jabbaRootContext",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.1",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^5.2.0",
    "eslint": "^9.25.1",
    "sinon": "^21.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
